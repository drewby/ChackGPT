@inherits LayoutComponentBase
@using chackgpt.Web.Components.Shared

<div class="page">
    <div class="sidebar">
        <NavMenu />
        <ChackAvatar />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@* SlidePopup component for displaying presentation slides *@
<SlidePopup />

@* VideoPopup component for displaying videos *@
<VideoPopup />

@* Chat notification balloons - rendered at root level to appear above slide popup *@
<ChatNotificationBalloon />
<DrewNotificationBalloon />

@* DrewAvatar component - rendered at root level to appear in lower right corner *@
<DrewAvatar />
