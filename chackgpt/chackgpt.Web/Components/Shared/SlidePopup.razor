@code {
    private HubConnection? hubConnection;
    private bool isVisible = false;
    private SlideDisplayInfo? currentSlide = null;
    private DotNetObjectReference<SlidePopup>? objRef;
    private bool isStreaming;

    private string GetImageUrl(string? imagePath)
    {
        if (string.IsNullOrEmpty(imagePath))
            return string.Empty;

        // If it's already an absolute URL, return as-is
        if (imagePath.StartsWith("http://") || imagePath.StartsWith("https://"))
            return imagePath;

        // Get the API service URL from configuration
        var apiUrl = Configuration["services:apiservice:https:0"] 
                     ?? Configuration["services:apiservice:http:0"]
                     ?? "https://localhost:7004";

        // Remove trailing slash from API URL and leading slash from image path if present
        apiUrl = apiUrl.TrimEnd('/');
        imagePath = imagePath.StartsWith('/') ? imagePath : $"/{imagePath}";

        return $"{apiUrl}{imagePath}";
    }

    private string GetIconEmoji(string icon)
    {
        return icon.ToLower() switch
        {
            "rocket" => "üöÄ",
            "sdk" => "üîß",
            "library" => "üìö",
            "security" => "üõ°Ô∏è",
            "web" => "üåê",
            "blazor" => "‚ö°",
            "mobile" => "üì±",
