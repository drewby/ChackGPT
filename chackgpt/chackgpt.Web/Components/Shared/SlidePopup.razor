    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("üìä SlidePopup initializing...");
        
        objRef = DotNetObjectReference.Create(this);
        ChatMessageService.StreamingStateChanged += OnStreamingStateChanged;
        isStreaming = ChatMessageService.IsStreaming;
        
        // Connect to SignalR hub to receive slide display events
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/chathub"))
            .WithAutomaticReconnect()
            .Build();

        // Listen for slide display requests
        hubConnection.On<string>("SlideDisplayRequested", (slideJson) =>
        {
            Logger.LogInformation("üìä SlidePopup received SlideDisplayRequested");
            try
            {
                currentSlide = JsonSerializer.Deserialize<SlideDisplayInfo>(slideJson);
                if (currentSlide != null)
                {
                    // Briefly set to false then true to trigger notification balloon reset
                    // This ensures the balloon clears when switching between slides
                    ChatMessageService.IsPopupVisible = false;
                    isVisible = true;
                    ChatMessageService.IsPopupVisible = true;
                    Logger.LogInformation("üìä SlidePopup displaying: {Topic} - Slide {SlideNumber}", 
                        currentSlide.Topic, currentSlide.SlideNumber);
                    InvokeAsync(StateHasChanged);
                }
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "‚ùå Failed to deserialize slide info");
            }
        });

        // Listen for slide close requests
        hubConnection.On("SlideCloseRequested", () =>
        {
            Logger.LogInformation("üìä SlidePopup received SlideCloseRequested");
            isVisible = false;
            currentSlide = null;
            ChatMessageService.IsPopupVisible = false;
            InvokeAsync(StateHasChanged);
        });

        try
        {
            await hubConnection.StartAsync();
            Logger.LogInformation("‚úÖ SlidePopup SignalR connection established");
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "‚ö†Ô∏è SlidePopup failed to connect to SignalR hub");
        }
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && objRef != null)
        {
            await JSRuntime.InvokeVoidAsync("setupSlidePopupKeyHandler", objRef);
        }
    }
    
    [JSInvokable]
    public void HandleEscapeKey()
    {
        if (isVisible)
        {
            CloseSlide();
            StateHasChanged();
        }
    }

    private void CloseSlide()
    {
        Logger.LogInformation("üìä SlidePopup closing slide");
        isVisible = false;
        currentSlide = null;
        ChatMessageService.IsPopupVisible = false;
    }

    private void OnStreamingStateChanged(object? sender, bool streaming)
    {
        isStreaming = streaming;
        if (isVisible)
        {
            InvokeAsync(StateHasChanged);
        }
    }

    private bool HasMoreSlides()
    {
        if (currentSlide == null) return false;
        if (!currentSlide.TotalSlides.HasValue) return false;
        return currentSlide.SlideNumber < currentSlide.TotalSlides.Value;
    }

    private void RequestNextSlide()
    {
        Logger.LogInformation("üìä SlidePopup requesting next slide");
        
        // Request next slide via the ChatMessageService
        ChatMessageService.RequestNextSlide();
    }

    public async ValueTask DisposeAsync()
    {
        objRef?.Dispose();
        ChatMessageService.StreamingStateChanged -= OnStreamingStateChanged;
        
        if (hubConnection is not null)
        {
            Logger.LogInformation("üìä SlidePopup disposing SignalR connection");
            await hubConnection.DisposeAsync();
        }
    }
}
